<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundd"
    tools:context=".MainActivity"
    android:layout_margin="10dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">
         <TextView
             android:gravity="center"
             android:id="@+id/etjudul"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="100dp"
             android:text="@string/sejarah"
             android:textColor="#F43636"
             android:textStyle="bold"
             android:textSize="20sp"
             />
         <TextView
             android:gravity="center"
             android:id="@+id/etjudul1"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:text="@string/bani_abbasiyah_dan_umayya"

             android:textColor="#F43636"
             android:textStyle="bold"
             android:textSize="20sp"
             />

         <Button
             android:onClick="clickumayyah"
             android:id="@+id/btn1"
             android:layout_marginStart="100dp"
             android:layout_marginTop="300dp"
             android:layout_width="230dp"
             android:layout_height="wrap_content"
             android:text="@string/sejarah_bani_umayyah"
             android:gravity="center"
             android:textSize="13sp"
             android:layout_marginEnd="10dp"
             />

         <Button
             android:onClick="clickabbasiyah"
             android:id="@+id/button3"
             android:layout_width="230dp"
             android:layout_height="wrap_content"
             android:layout_marginStart="100dp"
             android:layout_marginTop="15dp"
             android:text="@string/sejarah_bani_abbasiyah"
             android:gravity="center"
             android:textSize="13sp"
             android:layout_marginEnd="10dp"
             />
     </LinearLayout>
</RelativeLayout>